extends ../layouts/default

block main
  h1= title
  hr

block content
  - var action = '/artworks'
  - action += artwork.isNew? '' : '/' + artwork.id

  .row
    .col-md-8
      form.form-horizontal(method="post", action=action, enctype="multipart/form-data", role="form")

        input(type="hidden", name="_csrf", value="#{csrf_token}")

        - if (!artwork.isNew)
          input(type="hidden", name="_method", value="PUT")

        .form-group
          label.col-sm-2.control-label(for='title') Title
          .col-sm-10
            input.form-control(type='text', name="title", value=artwork.title, placeholder='Enter the title')

        .form-group
          label.col-sm-2.control-label(for='longTitle') Title
          .col-sm-10
            textarea.form-control(name="longTitle", value=artwork.longTitle, placeholder='Long title', rows='5')

        .form-group
          label.col-sm-2.control-label(for='medium') Medium
          .col-sm-10
            select.form-control(name="medium")
              for medium in mediums
                option(selected=artwork.medium == medium) #{medium}

        .form-group
          label.col-sm-2.control-label(for='year') Years
          .col-sm-10
            select.form-control(name='year')
              for year in years
                option(selected=artwork.year == year) #{year}

        .form-group
          label.col-sm-2.control-label(for='height') Height
          .col-sm-10
              input.form-control(type='text', name="height", value=artwork.height, placeholder='Enter the height')

        .form-group
          label.col-sm-2.control-label(for='width') Width
          .col-sm-10
              input.form-control(type='text', name="width", value=artwork.width, placeholder='Enter the width')

        .form-group
          label.col-sm-2.control-label(for='price') Price
          .col-sm-10
            input.form-control(type='text', name="price", value=artwork.price, placeholder='Enter the price')

        .form-group
          label.col-sm-2.control-label(for='availableOnEtsy') Available on Etsy?
          .col-sm-10
            input(type='checkbox', value=artwork.availableOnEtsy, name="availableOnEtsy", checked=(artwork.availableOnEtsy ? "checked" : undefined))

        .form-group
          label.col-sm-2.control-label(for='etsyOptions') Etsy title link
          .col-sm-10
            select.form-control(name='etsyOptions')
              for option in etsyOptions
                option(selected=artwork.etsyOptions == option) #{option}

        .form-group
          label.col-sm-2.control-label(for='sold') Sold?
          .col-sm-10
            input(type='checkbox', value=artwork.sold, name='sold', checked=(artwork.sold ? "checked" : undefined))

        .form-group
          label.col-sm-2.control-label(for='soldAt') Sold Date
          .col-sm-10
            input.form-control(type='date', name="soldAt", value=artwork.soldAt, placeholder='Enter the sold date')

        .form-group
          label.col-sm-2.control-label(for='soldTo') Sold To
          .col-sm-10
            select.form-control(name='soldTo')
              for party in soldTo
                option(selected=artwork.soldTo == party) #{party}

        .form-group
          label.col-sm-2.control-label(for='amountSalesTaxPaid') Amount of state sales tax paid
          .col-sm-10
            input.form-control(type='text', name="amountSalesTaxPaid", value=artwork.amountSalesTaxPaid, placeholder='Enter the amount of tax paid')

        .form-group
          label.col-sm-2.control-label(for='salesTaxPaidDate') Date state sales tax was paid
          .col-sm-10
            input.form-control(type='date', name="salesTaxPaidDate", value=artwork.salesTaxPaidDate, placeholder='Date state sales tax was paid')

        .form-group
          label.col-sm-2.control-label(for='saleNotes') Sale Notes
          .col-sm-10
            textarea.form-control(name="saleNotes", value=artwork.saleNotes, placeholder='Sale notes', rows='5')

        .form-group
          label.col-sm-2.control-label(for='notes') Notes
          .col-sm-10
            textarea.form-control(name="notes", value=artwork.notes, placeholder='Enter the notes', rows='5')

        .form-group
          label.col-sm-2.control-label(for='file') Image
          .col-sm-10
            input.form-control#file(type='file', name="image[]")

        .form-group
          label.col-sm-2.control-label(for='tags') Tags
          .col-sm-10
            input.form-control#tags(type='text', name="tags", value=artwork.tags, placeholder='Enter the tags')

        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(type='submit') Save
            | &nbsp;
            a.btn(href='/artworks', title="cancel") Cancel

    .col-md-4
      - if (!artwork.isNew && artwork.image && artwork.image.files && artwork.image.files.length)
        img(src=artwork.image.cdnUri + "/artinventory" + "/mini_" + artwork.image.files[0])
